<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%- titlePage %></title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Navbar -->
		<%- include('components/navbar') %>

		<!-- Main Content -->
		<div class="container mt-4">
			<h1>Dashboard</h1>
			<div class="row">
				<!-- Sales Summary -->
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Total Sales</h5>
							<p class="card-text">Rp 10,000,000</p>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Transactions</h5>
							<p class="card-text">200</p>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Products Sold</h5>
							<p class="card-text">500</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Recent Transactions -->
			<h2 class="mt-4">Recent Transactions</h2>
			<table class="table">
				<thead>
					<tr>
						<th>Date</th>
						<th>Product</th>
						<th>Quantity</th>
						<th>Total Price</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>2024-08-28</td>
						<td>Product A</td>
						<td>2</td>
						<td>Rp 200,000</td>
					</tr>
					<tr>
						<td>2024-08-28</td>
						<td>Product B</td>
						<td>1</td>
						<td>Rp 150,000</td>
					</tr>
					<tr>
						<td>2024-08-27</td>
						<td>Product C</td>
						<td>3</td>
						<td>Rp 300,000</td>
					</tr>
				</tbody>
			</table>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
